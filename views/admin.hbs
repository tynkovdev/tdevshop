<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>АДМИН ПАНЕЛЬ - Магазин кондитерских изделий</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css
">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js
" defer></script>
    <link rel="stylesheet" href="css/admin.css">
    <script src="js/admin.js" defer></script>
</head>
<body>
    <div class="modal-payed d-none ps-3 pe-3 pt-3">
        <h3>Добавление продукта</h3>
      <form action="/add" method="post">
        <label class="form-label">
            Введите название продукта
            <input type="text" name="title" class="form-control">
        </label>
        <label class="form-label">
            Введите описание
            <textarea name="description" class="form-control" rows="3"></textarea>
        </label>
        <label class="form-label">
            Введите цену на продукт
            <input type="number" name="price" class="form-control">
        </label>
        <label class="form-label">
            Вставьте ссылку на фото
            <input type="text" name="urlToImage" class="form-control">
        </label>
        <button type="submit" class="btn btn-success mt-4">Сохранить</button>
      </form>
      <button id="cancelButton" class="btn btn-warning mt-1">Отмена</button>
    </div>
    <div class="modal-wrapper d-none"></div>

    <header class="container">
        <h1 class="admin-title">Админ панель магазина</h1>
    </header>

    <main class="mt-5 mb-3">
        <div class="container">
            <div class="edit-cards">
                <h3>Редактирование товаров</h3>
                <button class="btn btn-success btn-add mt-2">Добавить</button>
                <form action="/edit">
                    <button class="btn btn-warning btn-admin mt-2">Редактировать карточки</button>
                </form>
            </div>
            <div class="tasks mt-5">
                <h3>Заказы</h3>
                <div class="cards mt-2 row row-cols-2 row-cols-md-4 row-cols-lg-4">
                    {{#each orders}}
                    <div class="card">
                        <div class="card-body">
                        <h3 class="bold">Заказ №{{@index}}</h3>
                        <ul class="order-list">
                            {{#if this.title1}}
                            <li class="order-title">{{this.title1}}</li>
                            {{/if}}
                            {{#if this.title2}}
                            <li class="order-title">{{this.title2}}</li>
                            {{/if}}
                            {{#if this.title3}}
                            <li class="order-title">{{this.title3}}</li>
                            {{/if}}
                            {{#if this.title4}}
                            <li class="order-title">{{this.title4}}</li>
                            {{/if}}
                            {{#if this.title5}}
                            <li class="order-title">{{this.title5}}</li>
                            {{/if}}
                            {{#if this.title6}}
                            <li class="order-title">{{this.title6}}</li>
                            {{/if}}
                            {{#if this.title7}}
                            <li class="order-title">{{this.title7}}</li>
                            {{/if}}
                            {{#if this.title8}}
                            <li class="order-title">{{this.title8}}</li>
                            {{/if}}
                            {{#if this.title9}}
                            <li class="order-title">{{this.title9}}</li>
                            {{/if}}
                            {{#if this.title10}}
                            <li class="order-title">{{this.title10}}</li>
                            {{/if}}
                        </ul>
                        {{#if this.status}}
                            <span class="bold text-muted">Статус: {{this.status}}</span>
                        {{/if}}
                        {{#if this.status_waiting}}
                        <form action="/status" method="post">
                            <input type="hidden" name="status_change" value="Принят">
                            <input type="hidden" name="id" value="{{@index}}">
                            <button type="submit" class="btn btn-success">Принять</button>
                        </form>
                        <form action="/status" method="post">
                            <input type="hidden" name="status_change" value="Отклонен">
                            <input type="hidden" name="id" value="{{@index}}">
                            <button type="submit" class="btn btn-danger mt-1">Отклонить</button>
                        </form>
                        {{/if}}
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </main>
</body>
</html>