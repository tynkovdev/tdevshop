<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Корзина</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css
">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js
" defer></script>
    <link rel="stylesheet" href="css/cart.css">
    <script src="js/carts.js" defer></script>
</head>
<body>
    <header class="p-3 mb-3 border-bottom">
    <div class="container">
      <div class="d-flex flex-wrap align-items-center justify-content-between">
        <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-dark text-decoration-none">
          <img src="assets/icons8-birthday-cake-64.png" width="48px" alt="">
        </a>

        <div class="dropdown text-end">
          <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
            <img src="https://github.com/mdo.png" alt="mdo" width="32" height="32" class="rounded-circle">
          </a>
          <ul class="dropdown-menu text-small">
            <li><a class="dropdown-item" href="/profile">Профиль</a></li>
            <li><a class="dropdown-item" href="/cart">Корзина</a></li>
            <li><a class="dropdown-item exit" href="#">Выйти</a></li>
          </ul>
        </div>
      </div>
    </div>
  </header>

  <main>
    <div class="container">
        <h1 class="main-title">Корзина</h1>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">№</th>
                    <th scope="col">Наименование продукта</th>
                    <th scope="col">Общая сумма</th>
                </tr>
            </thead>
            <tbody>
                {{#each carts}}
                <tr id="row-table">
                    <th scope="row">{{@index}}</th>
                    <th id="titleCard">{{this.title}}</th>
                    <th id="tableTotalPrice">{{this.price}}</th>
                </tr>
                {{/each}}
            </tbody>
        </table>
        
        <h3 class="total-price">Итого: ... руб.</h3>
        <form action="/cleancart" method="post">
            <input type="hidden" value="true" name="clean">
            <button type="submit" class="btn btn-danger mt-3">Очистить корзину</button>
        </form>
        <form action="/order" id="formOrder" method="post">
          
        </form>

        <h2 class="bold mt-5">Ваши заказы</h2>
        <div class="orders mt-3 mb-5 row row-cols-2 row-cols-md-4 row-cols-lg-4">
          {{#each orders}}
          <div class="card">
            <div class="card-body">
              <h3 class="bold">Заказ №{{@index}}</h3>
              <ul class="order-list">
                {{#if this.title1}}
                <li class="order-title">{{this.title1}}</li>
                {{/if}}
                {{#if this.title2}}
                <li class="order-title">{{this.title2}}</li>
                {{/if}}
                {{#if this.title3}}
                <li class="order-title">{{this.title3}}</li>
                {{/if}}
                {{#if this.title4}}
                <li class="order-title">{{this.title4}}</li>
                {{/if}}
                {{#if this.title5}}
                <li class="order-title">{{this.title5}}</li>
                {{/if}}
                {{#if this.title6}}
                <li class="order-title">{{this.title6}}</li>
                {{/if}}
                {{#if this.title7}}
                <li class="order-title">{{this.title7}}</li>
                {{/if}}
                {{#if this.title8}}
                <li class="order-title">{{this.title8}}</li>
                {{/if}}
                {{#if this.title9}}
                <li class="order-title">{{this.title9}}</li>
                {{/if}}
                {{#if this.title10}}
                <li class="order-title">{{this.title10}}</li>
                {{/if}}
              </ul>
              <span class="bold status mt-4 text-muted">Статус: {{this.status}}</span>
            </div>
          </div>
          {{/each}}
        </div>
    </div>
  </main>
</body>
</html>